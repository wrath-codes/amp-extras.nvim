{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "$id": "https://ampcode.com/schemas/tool-info.json",
  "title": "Tool Information",
  "description": "Individual tool definition from amp tools show --json",
  "type": "object",
  "required": ["name", "description", "inputSchema"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the tool"
    },
    "description": {
      "type": "string",
      "description": "Full markdown description of the tool, including usage guidelines and examples"
    },
    "inputSchema": {
      "type": "object",
      "description": "JSON Schema (draft 2020-12) defining tool input parameters",
      "properties": {
        "type": {
          "const": "object"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["string", "number", "integer", "boolean", "array", "object"]
              },
              "description": {
                "type": "string"
              },
              "items": {
                "type": "object"
              },
              "minItems": {
                "type": "integer"
              },
              "maxItems": {
                "type": "integer"
              },
              "enum": {
                "type": "array"
              },
              "default": {}
            }
          }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type", "properties"]
    },
    "source": {
      "type": "string",
      "enum": ["builtin", "mcp", "local-mcp", "toolbox"],
      "description": "Source of the tool"
    }
  }
}
